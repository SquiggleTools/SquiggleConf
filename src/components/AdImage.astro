---
import { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
	src: ImageMetadata;
}

const className =
	Astro.props.src.height > Astro.props.src.width
		? "ad-image-tall"
		: "ad-image-wide";
---

<Image alt="" class:list={["ad-image", className]} src={Astro.props.src} />

<style>
	.ad-image-tall {
		max-height: 15rem;
	}

	.ad-image-wide {
		max-width: 70vw;
	}
</style>
