---
interface Props {
	class?: string;
	href?: string;
	rel?: string;
	target?: string;
}

const { class: className, ...rest } = Astro.props;
---

<a class:list={["anchor-button", Astro.props.class]} target="_blank" {...rest}>
	<slot />
</a>

<style>
	.anchor-button {
		background: var(--colorEmphasizedBackground);
		border-radius: 1rem;
		box-shadow: 0 3px 7px rgba(0, 0, 0, 0.25);
		color: var(--colorOffWhite);
		font-family: var(--fontFamilyHeading);
		font-size: var(--fontSizeBodyLarge);
		font-weight: 700;
		padding: 1.2rem 2rem 1rem;
		text-decoration: none;
		transition:
			var(--transitionFast) transform,
			var(--transitionFast) box-shadow;
		user-select: none;
	}

	.anchor-button:focus,
	.anchor-button:hover {
		transform: translateY(-3px);
		box-shadow: 0 6px 14px var(--colorTextShadow);
	}
</style>
