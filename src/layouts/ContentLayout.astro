---
import "@fontsource-variable/josefin-sans";
import "@fontsource/urbanist";
import { SkipLinks } from "accessible-astro-components";

import { Props as HeadProps } from "~/components/Head.astro";
import Footer from "~/components/Footer.astro";
import Header from "~/components/Header.astro";

import BaseLayout from "./BaseLayout.astro";
import BodyArea from "~/components/BodyArea.astro";

type Props = HeadProps;
---

<BaseLayout {...Astro.props}>
	<SkipLinks />
	<main id="main-content">
		<Header />
		<slot name="hero" />
		<BodyArea class="primary-contents">
			<slot />
		</BodyArea>
	</main>
	<Footer />
	<style>
		body {
			background: linear-gradient(
				180deg,
				var(--colorBackdropDark) 20%,
				var(--colorBackdropLight) 100%
			);

			color: var(--colorForeground);
		}

		.primary-contents {
			align-items: center;
			display: flex;
			flex-direction: column;
			padding: clamp(2.5rem, 10vw, 5rem) 0 7.5rem;
		}
	</style>
</BaseLayout>
